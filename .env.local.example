# Copy this file to .env.local and fill in your values
# This file should NOT be committed to git

# Azure Storage Account Connection String (for testing deployment)
# Get this from Azure Portal -> Storage Account -> Access Keys
AZURE_STORAGE_CONNECTION_STRING=

# SMTP Settings (optional - for email functionality)
SMTP_USERNAME=
SMTP_PASSWORD=

# Azure Function App Name (testing)
AZURE_FUNCTION_APP_NAME=sterobson-volunteercheckin-testing

# Azure Resource Group
AZURE_RESOURCE_GROUP=VolunteerCheckIn

# GitHub Repository (for GitHub Pages deployment)
GITHUB_REPO=sterobson/VolunteerCheckin
