# EditorConfig for VolunteerCheckin.Functions
# https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.cs]
# Suppress MA0048: File name must match type name
# DTOs.cs intentionally contains multiple record types for convenience
dotnet_diagnostic.MA0048.severity = none

# Suppress MA0016: Prefer using collection abstraction instead of implementation
# Record types use concrete List<T> for JSON serialization compatibility and API contracts
dotnet_diagnostic.MA0016.severity = none

# Suppress MA0004: Use Task.ConfigureAwait(false)
# Azure Functions handles synchronization context appropriately
dotnet_diagnostic.MA0004.severity = none

# Suppress MA0002: Use StringComparer overload
# Many LINQ operations on IDs don't require explicit comparer
dotnet_diagnostic.MA0002.severity = suggestion

# Suppress S2629: Don't use string concatenation in logging
# Performance impact is minimal in this context
dotnet_diagnostic.S2629.severity = suggestion

# Suppress S1075: Hardcoded URIs
# Used for well-known URLs in configuration
dotnet_diagnostic.S1075.severity = suggestion

# Suppress MA0006: Use string.Equals instead of == operator
# The == operator is readable and appropriate for simple string comparisons
dotnet_diagnostic.MA0006.severity = suggestion

# Suppress MA0011: Use CultureInfo with ToLower
# ToLowerInvariant is used where appropriate, ToLower is fine for display purposes
dotnet_diagnostic.MA0011.severity = suggestion

# Suppress S3267: Loops should use LINQ Where
# Sometimes explicit loops are clearer
dotnet_diagnostic.S3267.severity = suggestion

# Suppress MA0007: Add comma after the last value
# Trailing commas are a style preference, not a requirement
dotnet_diagnostic.MA0007.severity = none

# Suppress CA1873: Logging argument evaluation
# Structured logging still evaluates arguments; this is acceptable overhead
dotnet_diagnostic.CA1873.severity = suggestion

# Suppress CA1869: Cache JsonSerializerOptions
# Low-frequency endpoints don't benefit significantly from caching
dotnet_diagnostic.CA1869.severity = suggestion

# Suppress MA0040: Use CancellationToken
# Azure Functions manages request lifecycle; explicit tokens not always needed
dotnet_diagnostic.MA0040.severity = suggestion

# Suppress MA0042: Use await instead of .Result
# Sometimes .Result is used intentionally for parallel task coordination
dotnet_diagnostic.MA0042.severity = suggestion

# Suppress MA0071: Avoid redundant else
# Explicit else blocks can improve readability in some cases
dotnet_diagnostic.MA0071.severity = suggestion

# Suppress RCS1163: Unused parameter
# HTTP request parameters are required for Azure Functions binding signature
dotnet_diagnostic.RCS1163.severity = suggestion

# Suppress RCS1077: Optimize LINQ method call
# Minor optimizations that reduce readability
dotnet_diagnostic.RCS1077.severity = suggestion

# Suppress RCS1146: Use conditional access
# Sometimes explicit null checks are clearer
dotnet_diagnostic.RCS1146.severity = suggestion

# Suppress MA0003: Name the parameter
# Lambda parameter naming is a style preference
dotnet_diagnostic.MA0003.severity = suggestion

# Suppress MA0020: Use Exists instead of Any
# Any() is more commonly understood and equally performant for most cases
dotnet_diagnostic.MA0020.severity = suggestion

# IDE rules (Visual Studio specific)
# IDE0090: Simplify new expression - enforce using 'new()' instead of 'new Type()'
dotnet_diagnostic.IDE0090.severity = suggestion

# IDE0305: Collection initialization can be simplified - enforce using collection expressions
dotnet_diagnostic.IDE0305.severity = suggestion

# IDE0290: Use primary constructor - this is a style preference, not required
dotnet_diagnostic.IDE0290.severity = none

# CA1862: Use StringComparison for case-insensitive comparisons
dotnet_diagnostic.CA1862.severity = warning

# RCS1226: Add paragraph to documentation comment - style preference
dotnet_diagnostic.RCS1226.severity = none

# ASP0015: Use typed Authorization header property
dotnet_diagnostic.ASP0015.severity = suggestion

# MA0001: StringComparison should be specified - already using explicit comparisons where needed
dotnet_diagnostic.MA0001.severity = suggestion
